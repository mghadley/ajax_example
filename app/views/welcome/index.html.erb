<div class='row'>
	<div class='col m6 offset-m1 blue-grey lighten-3 all-users'>
		<h1>All Users</h1>
		<table class='responsive-table bordered highlight'>
			<thead>
				<th>First Name</th>
				<th>Last Name</th>
				<th>Phone Number</th>
			</thead>
			<tbody id='users_tbody'>
			</tbody>
		</table>
	</div>
	<div class='col m3 offset-m1 grey lighten-1 add-user'>
		<h1>Add a new user</h1>
		<form id='new_user'>
			<input placeholder='First Name' name='user[first_name]' require=true>
			<input placeholder='Last Name' name='user[last_name]' require=true>
			<input placeholder='Phone Number' name='user[phone_number]'>
			<button class='btn btn-primary' type='submit'>Add User</button>
		</form>
	</div>
</div>